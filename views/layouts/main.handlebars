<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>MoFo Metrics</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="csrf-token" content="{{{token}}}">
        <meta name="persona-email" content="{{{currentUser}}}">
        <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,700italic,400,300,700" rel="stylesheet">
        <link href="https://netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
        <link href="/bower_components/makerstrap/dist/makerstrap.min.css" rel="stylesheet">

        <link rel="stylesheet" href="/bower_components/dynatable/jquery.dynatable.css">
        <link href='/bower_components/metrics-graphics/css/metricsgraphics.css' rel='stylesheet' type='text/css'>


        <link rel="stylesheet" href="/styles/main.css">

    </head>
    <body id="top">
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <span class="navbar-brand"><a href="/dashboards/">MoFo Metrics</a></span>
        </div>
      </div>
    </div>

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="container">
      <div class="row">
        <div class="col-sm-10">
        </div>
        <div class="col-sm-2">
          {{#if authorized}}
            <p class="small text-right">{{{username}}}</p>
            <button id="logout" class="btn btn-xs btn-warning pull-right">Sign out <span class="glyphicon glyphicon-remove-sign"></span></button><br /><br />
          {{else}}
            {{#unless currentUser}}
            <br />
            <a id="login" class="btn btn-primary btn-lg pull-right" role="button">Sign in &raquo;</a>
            {{/unless}}
          {{/if}}
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
            {{{body}}}
        </div>
      </div>
    </div>
    <footer>
        <div class="container">
            <p><a href="https://github.com/mozilla/webmaker-metrics">Github</a> | <a href="https://github.com/mozilla/webmaker-metrics/issues">File a bug</a> | <a href="https://github.com/mozilla/webmaker-metrics/issues">Request a feature</a></p>
        </div>
    </footer>


    <script src="/bower_components/jquery/dist/jquery.js"></script>
    <script src="/bower_components/dynatable/jquery.dynatable.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://login.persona.org/include.js"></script>
    <script src='/bower_components/d3/d3.min.js'></script>
    <script src='/bower_components/metrics-graphics/js/metricsgraphics.min.js'></script>
    <script src="/scripts/main.js"></script>
    <!-- {{{pageJS}}} -->
    {{#if pageJS}}
      <script src="/scripts/{{{pageJS}}}.js"></script>
    {{/if}}
    </body>
</html>
